<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:gravity="center_vertical|left">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <TextView
            android:text="配送日"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
        />
        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/et_haisoDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bootstrapBrand="primary"
            app:bootstrapSize="xl"
            android:enabled="false"
            android:textColor="#000000"
        />
    </LinearLayout>
    <TextView
        android:id="@+id/sakiTextView"
        android:text="紐づけ先"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
    />
    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/himotukesaki"
        android:inputType="numberSigned"
        android:maxLength="20"
        android:layout_marginBottom="5dp"
        android:layout_gravity="fill_horizontal"
        app:bootstrapBrand="primary"
        app:bootstrapSize="xl"
    />

    <TextView
        android:id="@+id/messagelbl"
        android:text="一個目の積載はEnterキー"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#ff0d47a1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#CC0000"
        android:id="@+id/txt_tenpoName" />

    <TextView
        android:id="@+id/himotukemotolbl"
        android:text="紐づけ元"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
    />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/himotukemoto"
        android:inputType="numberSigned"
        android:maxLength="20"
        android:layout_marginBottom="30dp"
        android:layout_gravity="fill_horizontal"
        app:bootstrapBrand="primary"
        app:bootstrapSize="xl"
    />

    <com.beardedhen.androidbootstrap.BootstrapButton
        style="@style/wrapping_button"
        android:text="満タン"
        android:id="@+id/btn_todoke_mantan"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="20dp"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:enabled="false"
        app:bootstrapBrand="primary"
        app:bootstrapSize="xl"
        app:roundedCorners="true" />


</LinearLayout>