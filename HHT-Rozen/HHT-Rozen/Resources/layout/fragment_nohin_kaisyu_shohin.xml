<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="45dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:columnCount="3">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="回収個数"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#ff0d47a1"
            android:id="@+id/txt_nohinKaisyuMatehan_vendorName"
            android:layout_marginBottom="45dp"
            android:layout_columnSpan="3" />
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="店間移動"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txt_nohinKaisyuMatehan_matehan1"
            android:textSize="25sp"
            android:textStyle="bold"
            android:paddingLeft="0dp"
            android:layout_marginBottom="10dp"
             />
        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_Kaisyu_tenido"
            android:inputType="numberDecimal"
            app:bootstrapBrand="primary"
            app:bootstrapSize="xl"
            android:textSize="23sp"
            android:layout_columnSpan="2" />
        <TextView
            android:layout_height="wrap_content"
            android:text="返品"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txt_nohinKaisyuMatehan_matehan2"
            android:textSize="25sp"
            android:textStyle="bold"
            android:paddingLeft="0dp"
            android:layout_marginBottom="10dp"
            android:layout_width="150dp" />
        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_Kaisyu_henpin"
            android:inputType="numberDecimal"
            app:bootstrapBrand="primary"
            app:bootstrapSize="xl"
            android:layout_columnSpan="2" />
      <TextView
            android:layout_height="wrap_content"
            android:text="メール"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="25sp"
            android:textStyle="bold"
            android:paddingLeft="0dp"
            android:layout_marginBottom="50dp"
            android:layout_width="150dp" />
        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_Kaisyu_mail"
            android:inputType="numberDecimal"
            app:bootstrapBrand="primary"
            app:bootstrapSize="xl"
            android:layout_columnSpan="2" />
    </GridLayout>
  <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <com.beardedhen.androidbootstrap.BootstrapButton
        style="@style/wrapping_button"
        android:text="確定"
        android:id="@+id/btn_nohinKaisyuShohin_confirm"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="5dp"
        app:bootstrapBrand="primary"
        app:bootstrapSize="xl"
        app:roundedCorners="true" />
    </LinearLayout>
</LinearLayout>