<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:gravity="center_vertical|left">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:columnCount="3">
        <TextView
            android:text="回収台数"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#ff0d47a1"
            android:id="@+id/txt_nohinKaisyuMatehan_vendorName"
            android:layout_marginBottom="40dp"
            android:layout_columnSpan="3" />
        <TextView
            android:text="オリコン"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txt_nohinKaisyuMatehan_matehan3"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:layout_width="150dp" />
        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/et_kaisyu_oricon"
            android:inputType="numberDecimal"
            android:layout_gravity="fill_horizontal"
            app:bootstrapBrand="primary"
            app:bootstrapSize="xl"
            android:layout_columnSpan="2" />
        <TextView
            android:text="かご車"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txt_nohinKaisyuMatehan_matehan1"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:layout_width="150dp" />
        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/et_kaisyu_Kagosya"
            android:inputType="numberDecimal"
            android:layout_gravity="fill_horizontal"
            app:bootstrapBrand="primary"
            app:bootstrapSize="xl"
            android:layout_columnSpan="2" />
        <TextView
            android:text="キャリー"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txt_nohinKaisyuMatehan_matehan2"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_width="150dp" />
        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/et_kaisyu_Carry"
            android:inputType="numberDecimal"
            android:layout_gravity="fill_horizontal"
            app:bootstrapBrand="primary"
            app:bootstrapSize="xl"
            android:layout_columnSpan="2" />
    </GridLayout>
    <com.beardedhen.androidbootstrap.BootstrapButton
        style="@style/wrapping_button"
        android:text="確定"
        android:id="@+id/btn_nohinKaisyuMatehan_confirm"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="0dp"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        app:bootstrapBrand="primary"
        app:bootstrapSize="xl"
        app:roundedCorners="true" />
</LinearLayout>