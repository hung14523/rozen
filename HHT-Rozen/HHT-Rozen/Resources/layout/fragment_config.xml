<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="fill_parent"
    android:id="@+id/linearLayout2"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:layout_weight="1"
    android:layout_height="fill_parent"
    android:gravity="center_vertical|left">
	<android.support.design.widget.TextInputLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/textuernameInputLayout"
		android:layout_marginTop="12.0dp"
		android:layout_marginBottom="12.0dp">
		<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/restURLEditText"
			android:hint="接続先URL"
			android:singleLine="true" />
	</android.support.design.widget.TextInputLayout>
	<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:text="例) bms.jobs-logistics.jp"
		android:textColor="#808080"
		android:layout_marginTop="-15dp"
	/>
	<Button
		android:text="確定"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/confirm"
		android:layout_marginTop="34.0dp"
		android:layout_marginBottom="40dp"
		android:background="@drawable/bootstrap_button"
		android:textColor="#ffffffff"
		android:textSize="20sp" />
	
</LinearLayout>