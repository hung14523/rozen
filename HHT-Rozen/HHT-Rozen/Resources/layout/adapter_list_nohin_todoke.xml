<?xml version="1.0" encoding="utf-8"?>
<GridLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:minWidth="25px"
	android:minHeight="25px"
	android:columnCount="3"
	android:paddingTop="5dp">
	<TextView
		android:text="11:00"
		android:textSize="20sp"
		android:textStyle="bold"
		android:id="@+id/text_yttime"
		android:layout_width="70dp"
		android:layout_height="30dp"
		android:layout_marginLeft="10dp" />
	<TextView
		android:text="xxxxxxxxxx"
		android:textSize="20sp"
		android:textStyle="bold"
		android:id="@+id/text_tokuiname"
		android:layout_width="150dp"
		android:layout_height="30dp" />
	<TextView
		android:text="22022"
		android:textSize="20sp"
		android:textStyle="bold"
		android:id="@+id/text_berth"
		android:layout_width="70dp"
		android:layout_height="30dp" />
	<RelativeLayout
		android:id="@+id/rl_progress_bar_set"
		android:layout_width="300dp"
		android:layout_height="wrap_content"
		android:layout_columnSpan="3"
		android:layout_marginRight="10dp"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="10dp"
		android:layout_marginLeft="10dp">
		<com.beardedhen.androidbootstrap.BootstrapProgressBar
			android:id="@+id/txt_adp_todoke_progressbar"
			style="@android:style/Widget.ProgressBar.Horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			app:bootstrapBrand="primary"
			app:bootstrapshowPercentage="false"
			app:bootstrapSize="xl"
			android:max="100" />
		<TextView
			android:text="30/30"
			android:id="@+id/tv_progress_horizontal"
			android:textSize="20sp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_alignBottom="@id/txt_adp_todoke_progressbar"
			android:background="@android:color/transparent"
			android:gravity="center"
			android:layout_marginBottom="3dp"
		/>
	</RelativeLayout>
</GridLayout>