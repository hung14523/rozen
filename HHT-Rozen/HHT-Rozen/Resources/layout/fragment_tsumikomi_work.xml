<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingLeft="20dp"
	android:paddingRight="20dp">
    <GridLayout
        android:id="@+id/teibanLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:columnCount="2">
        <TextView
            android:text="赤坂店"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/txt_tsumikomiWork_tokuisakiNm"
            android:layout_columnSpan="2" />
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="個数"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginRight="0dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:id="@+id/txt_tsumikomiWork_kosulbl"
        />
        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="25sp"
            android:textAlignment="center"
            android:inputType="numberSigned"
            android:id="@+id/et_tsumikomiWork_kosu"
            android:focusable="false" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="車両ラベル"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginRight="10dp"
            android:id="@+id/txt_tsumikomiWork_carlbl"
            android:textSize="25sp"
            android:textStyle="bold" />
        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="25sp"
            android:inputType="numberSigned"
            android:id="@+id/et_tsumikomiWork_carLabel"
            android:layout_gravity="fill_horizontal"
            android:focusable="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_columnSpan="2"
            android:background="#ff0d47a1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="キャリー"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginRight="10dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginBottom="0dp" />
        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="25sp"
            
            android:textAlignment="center"
            android:inputType="numberSigned"
            android:layout_marginBottom="-0dp"
            android:id="@+id/et_tsumikomiWork_carry"
            android:focusable="false" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="カゴ車"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginRight="10dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginBottom="0dp" />
        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="25sp"
            
            android:textAlignment="center"
            android:inputType="numberSigned"
            android:layout_marginBottom="0dp"
            android:id="@+id/et_tsumikomiWork_kargoCar"
            android:focusable="false" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="その他"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginRight="10dp"
            android:textSize="25sp"
            android:textStyle="bold" />
        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="25sp"
            android:textAlignment="center"
            android:inputType="numberSigned"
            android:id="@+id/et_tsumikomiWork_sonota"
            android:focusable="false" />
    </GridLayout>
</LinearLayout>